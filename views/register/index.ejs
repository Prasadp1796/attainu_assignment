<!doctype html>
<html lang="en">
    <head>
        <% include ../partials/head.ejs%>
        
      </head>
  <body ng-app="citiesApp" ng-controller="citiesAppController" ng-init="initController()">
    <div class="container-fluid" id="wrapper">
      
        <div class="col-6 mx-auto mt-5 border border-secondary p-5">
            <form method="POST" action="/register">
                <h4 class="text-center text-primary">Create Account</h4>
                <%if(error){%>
                    <h6 class="text-danger text-center"><%-errorMessage%></h6>
                <%}%>
                <div class="form-row">
                    <div class="form-group col-12">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" id="email" placeholder="Enter Email" value="<%-email%>">
                    </div>
                    <div class="form-group col-12">
                        <label>Password</label>
                        <input type="text" class="form-control" name="password" id="password" placeholder="Enter Password" value="<%-password%>">
                    </div>
                </div>
                <input type="submit" class="btn btn-block btn-primary" value="LogIn">
            </form>
                <a class="mx-auto" href="/login">Already Have Account? Log In Here</a>
        </div>
    
    </div>

    
    <!-- body scripts loaded here -->
    <%include ../partials/bodyScriptLoader.ejs%>


  </body>
</html>