<!doctype html>
<html lang="en">
    <head>
        <% include ../partials/head.ejs%>
        
      </head>
  <body ng-app="citiesApp" ng-controller="citiesAppController" ng-init="initController()">
    <div class="container-fluid" id="wrapper">
        <div class="card mt-2">
            <div class="card-header bg-info">
                <h4 class="text-center text-white">All Cities List</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-center text-nowrap" datatable="ng" dt-options="dtOptions" width="100%" cellspacing="0">
                        <thead class="bg-danger text-light">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="city in cities">
                                <td>{{city.id}}</td>
                                <td>{{city.name}}</td>
                                <td>{{city.state}}</td>
                            </tr>
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>
            
            </div>
        </div>

    </div>

    
    <!-- body scripts loaded here -->
    <%include ../partials/bodyScriptLoader.ejs%>


    <!-- ng-app script loaded here -->
    <script>
        <%include ng-app.js%>
    </script>
  </body>
</html>